<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 배경 색상 -->
    <solid android:color="#000000" /> <!-- 노란색 배경 -->

    <!-- 테두리 설정 -->
    <stroke
        android:width="2dp"
        android:color="#000000" /> <!-- 검은색 테두리 -->

    <!-- 둥근 모서리 설정 -->
    <corners android:radius="16dp" /> <!-- 둥글게 처리할 반경 -->

    <!-- 내부 패딩 -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
